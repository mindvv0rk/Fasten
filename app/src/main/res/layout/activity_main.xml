<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ai.testtask.fasten.MainActivity">

    <Button
        android:id="@+id/current_weather"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/main_activity_current_weather_button_title"
        app:layout_constraintBottom_toTopOf="@+id/search_weather"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/search_weather"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/main_activity_search_weather_button_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/current_weather"
        app:layout_constraintRight_toRightOf="@+id/current_weather"
        app:layout_constraintTop_toBottomOf="@+id/current_weather" />

</android.support.constraint.ConstraintLayout>
