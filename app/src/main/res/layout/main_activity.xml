<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="handler"
            type="ai.testtask.fasten.MainActivityClickHandler"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        tools:context="ai.testtask.fasten.MainActivity">

        <Button
            android:id="@+id/current_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:onClick="@{handler.onCurrentWeatherClick}"
            android:text="@string/main_activity_current_weather_button_title" />

        <Button
            android:id="@+id/search_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_activity_search_weather_button_title"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:onClick="@{handler.onSearchWeatherClick}" />

    </LinearLayout>
</layout>
